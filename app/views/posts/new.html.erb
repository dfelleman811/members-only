<h1>new post</h1>

<%= form_with model: @post do |form| %>

    <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>

     <div>
        <%= form.label :text %>
        <%= form.text_area :text %>
    </div>

     <div>
       <%= form.submit "Create Post" %>
    </div>
<% end %>
